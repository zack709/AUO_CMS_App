<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/AUOPrimary">


    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_dashboard_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/flexy_grey_700"
        app:cardCornerRadius="20dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp"
            >

            <TextView
                android:id="@+id/fragment_dashboard_card_content_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/fragment_dashboard_card_content_title"
                android:textColor="@color/flexy_text_100"
                android:textSize="21sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/fragment_dashboard_card_content_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fragment_dashboard_card_content_subtitle"
                android:textColor="@color/white_a40"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_card_content_title"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/fragment_dashboard_card_content_spinner"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:paddingRight="24dp"
                android:background="@drawable/dashboard_spinner"
                android:popupBackground="@color/gray_800"
                app:layout_constraintTop_toTopOf="@id/fragment_dashboard_card_content_title"
                app:layout_constraintBottom_toBottomOf="@id/fragment_dashboard_card_content_subtitle"
                app:layout_constraintRight_toRightOf="parent"
                />

            <View
                android:id="@+id/fragment_dashboard_card_content_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@color/flexy_grey_200"
                app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_card_content_subtitle"
                />

            <TextView
                android:id="@+id/fragment_dashboard_card_content_storage_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/fragment_dashboard_card_content_storage_title"
                android:textColor="@color/flexy_text_100"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_card_content_divider"
                app:layout_constraintLeft_toLeftOf="parent"
                />

            <TextView
                android:id="@+id/fragment_dashboard_card_content_storage_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/fragment_dashboard_card_content_storage_usage"
                android:textColor="@color/flexy_text_100"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_card_content_divider"
                app:layout_constraintRight_toRightOf="parent"
                />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/fragment_dashboard_card_content_chart"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/fragment_dashboard_card_content_storage_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>