<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_shelf_manager_shelf_list_item_view"
    android:layout_width="match_parent"
    android:layout_height="50dp">

    <TextView
        android:id="@+id/fragment_shelf_manager_shelf_list_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/fragment_shelf_manager_shelf_list_item_divider1"
        />

    <View
        android:id="@+id/fragment_shelf_manager_shelf_list_item_divider1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:background="#444444"
        app:layout_constraintLeft_toRightOf="@id/fragment_shelf_manager_shelf_list_item_name"
        app:layout_constraintRight_toLeftOf="@id/fragment_shelf_manager_shelf_list_item_rows"
        />

    <TextView
        android:id="@+id/fragment_shelf_manager_shelf_list_item_rows"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/fragment_shelf_manager_shelf_list_item_divider1"
        app:layout_constraintRight_toLeftOf="@id/fragment_shelf_manager_shelf_list_item_divider2"
        />

    <View
        android:id="@+id/fragment_shelf_manager_shelf_list_item_divider2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:background="#444444"
        app:layout_constraintLeft_toRightOf="@id/fragment_shelf_manager_shelf_list_item_rows"
        app:layout_constraintRight_toLeftOf="@id/fragment_shelf_manager_shelf_list_item_columns"
        />

    <TextView
        android:id="@+id/fragment_shelf_manager_shelf_list_item_columns"
        android:layout_width="70dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/fragment_shelf_manager_shelf_list_item_divider2"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>